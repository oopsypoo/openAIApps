<Window x:Class="openAIApps.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main content: StackPanel of path groups -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="App Root:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="AppRootTextBox" Width="300" Text="{Binding AppRoot, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                <Button x:Name="BrowseAppRootBtn" Content="Browse" Width="80" Margin="10,0,0,0" Click="BrowseAppRoot_Click" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Logs Folder:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="LogsTextBox" Width="300"
                         Text="{Binding LogsFolder, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"/>
                <Button Content="Browse" Width="80" Margin="10,0,0,0" Click="BrowseLogs_Click" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Sounds Folder:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="SoundsTextBox" Width="300"
                     Text="{Binding SoundsFolder, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"/>
                <Button Content="Browse" Width="80" Margin="10,0,0,0" Click="BrowseSounds_Click" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Images Folder:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="ImagesTextBox" Width="300"
                     Text="{Binding ImagesFolder, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"/>
                <Button Content="Browse" Width="80" Margin="10,0,0,0" Click="BrowseImages_Click" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Videos Folder:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="VideosTextBox" Width="300"
                     Text="{Binding VideosFolder, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"/>
                <Button Content="Browse" Width="80" Margin="10,0,0,0" Click="BrowseVideos_Click" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons row -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Margin="5,5,0,5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
