<Window x:Class="openAIApps.RecordingTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create Wavefile - wav" Height="256" Width="512" Topmost="False">
    <Grid>
        <GroupBox Header="Recording Tool" Grid.Column="1" Grid.Row="3">
            <StackPanel x:Name="spRecording" Orientation="Vertical" Margin="5" >
                <Label Content="Create Recording" HorizontalAlignment="Center"/>
                <Button x:Name="btnSaveToFile" Content="Save To File" IsEnabled="True" Click="btnSaveToFile_Click" />
                <Label  x:Name="lblNewAudioFile" Content="Filename - none selected"/>
                <Button x:Name="btnAudioStartRecording" Margin="0,5,0,0" Content="Start Recording" IsEnabled="True" Click="btnAudioStartRecording_Click"/>
                <Label Content="--------------------" HorizontalAlignment="Center"/>
                <Button x:Name="btnAudioStopRecording"  Margin="0,5,0,0" Content="Stop Recording" IsEnabled="False" Click="btnAudioStopRecording_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
