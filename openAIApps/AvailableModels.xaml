<Window x:Class="openAIApps.AvailableModels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:openAIApps"
        mc:Ignorable="d"
        Title="AvailableModels" 
                WindowStartupLocation="CenterOwner"
                ResizeMode="NoResize"
                WindowStyle="ThreeDBorderWindow"
                Width="320"
                Height="150"
                Background="#1E1E1E"
                Foreground="White"
                AllowsTransparency="false"
                ShowInTaskbar="False"
                Topmost="True">
    <Border CornerRadius="12" Background="#2A2A2A" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="txtTitle"
                   Text="Available models for current user"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,3"
                   TextAlignment="Center"/>
            <ComboBox x:Name="cbModels"
                      Width="240"
                      Height="25"
                      FontSize="14"
                      Margin="0,0,0,3"/>
            <Button Content="Close"
                    Margin="0,0,0,3"
                    Width="100"
                    Height="25"
                    Click="Button_Click"/>
        </StackPanel>
    </Border>
</Window>
